<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >

    <com.nhancv.facemask.AutoFitTextureView
        android:id="@+id/fragment_camera_textureview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/fragment_camera_iv_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible"
        />

    <com.nhancv.facemask.m2d.M2DLandmarkView
        android:id="@+id/fragment_camera_2dlandmarkview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.nhancv.facemask.m3d.M3DSurfaceView
        android:id="@+id/fragment_camera_gl_3dsurfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/fragment_camera_tv_fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:visibility="visible"
        />


</RelativeLayout>
